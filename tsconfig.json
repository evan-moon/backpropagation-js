{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["*"],
      "src/*": ["src/*"],
      "lib/*": ["src/lib/*"],
      "config/*": ["src/config/*"],
      "graphics/*": ["src/graphics/*"],
      "types/*": ["src/types/*"],
      "node_modules/*": ["node_modules/*"]
    },
    "module": "esnext",
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"],
  "compileOnSave": false
}
