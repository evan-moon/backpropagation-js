{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["*"],
      "src/*": ["src/*"],
      "lib/*": ["src/lib/*"],
      "config/*": ["src/config/*"],
      "graphics/*": ["src/graphics/*"],
      "types/*": ["src/types/*"]
    },
    "module": "esnext",
    "target": "es5",
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"],
  "compileOnSave": false
}
